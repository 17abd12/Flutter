rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
    }
    
    // Meals collection - users can only access their own meals
    // ⚡ REQUIRED INDEX: uid (Ascending) + timestamp (Descending)
    // Used by: getMealsForDate(), getTodayCaloriesConsumed(), getDashboardSummary()
    match /meals/{mealId} {
      allow read: if isAuthenticated() && 
                     (resource == null || resource.data.uid == request.auth.uid);
      allow create: if isAuthenticated() && 
                       request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.uid == request.auth.uid;
    }
    
    // Exercises collection - users can only access their own exercises
    // ⚡ REQUIRED INDEX: uid (Ascending) + timestamp (Descending)
    // Used by: getTodayExercises(), getTodayCaloriesBurned(), getDashboardSummary()
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated() && 
                     (resource == null || resource.data.uid == request.auth.uid);
      allow create: if isAuthenticated() && 
                       request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.uid == request.auth.uid;
    }
    
    // Weight history collection - users can only access their own weight history
    // ⚡ REQUIRED INDEX: uid (Ascending) + timestamp (Descending)
    // Used by: getWeightHistory(), getAllWeightHistory(), getDashboardSummary()
    match /weight_history/{entryId} {
      allow read: if isAuthenticated() && 
                     (resource == null || resource.data.uid == request.auth.uid);
      allow create: if isAuthenticated() && 
                       request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.uid == request.auth.uid;
    }
    
    // Generated recipes collection - users can only access their own generated recipes
    // No composite index required (sorting done in-memory)
    // Used by: saveGeneratedRecipe(), getUserGeneratedRecipes(), getGeneratedRecipe(), deleteGeneratedRecipe()
    match /generated_recipes/{recipeId} {
      allow read: if isAuthenticated() && 
                     (resource == null || resource.data.uid == request.auth.uid);
      allow create: if isAuthenticated() && 
                       request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.uid == request.auth.uid;
    }
  }
}
